<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-striped table-lg table-dark table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>School</th>
      <th>College</th>
      <th>Passout</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.school %></td>
        <td><%= user.college %></td>
        <td><%= user.passout %></td>
        <td><%= link_to 'Show', user, :class => 'btn btn-success btn-sm text-light' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-sm btn-success text-light' %></td>
        <% if user.pdf.attached? %>
          <td><%= link_to 'Pdf', url_for(user.pdf) , :class => 'btn btn-success btn-sm text-light'%></td>
          <br>
          <td><%= link_to 'Download', rails_blob_path(user.pdf, disposition: "attachment"), :class => 'btn btn-success btn-sm text-light'%></td>
        <%end%>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger btn-sm text-light'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path , :class => 'btn btn-success text-light'%>
